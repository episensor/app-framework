{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "productName": "{{APP_NAME}}",
  "version": "{{APP_VERSION}}",
  "identifier": "{{APP_IDENTIFIER}}",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:{{DEV_PORT}}",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "{{APP_TITLE}}",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 1024,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© {{YEAR}} {{COMPANY}}",
    "category": "{{CATEGORY}}",
    "shortDescription": "{{SHORT_DESCRIPTION}}",
    "longDescription": "{{LONG_DESCRIPTION}}"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "{{UPDATE_ENDPOINT}}"
      ],
      "dialog": true,
      "pubkey": "{{UPDATE_PUBKEY}}"
    }
  }
}