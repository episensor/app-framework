{
  "name": "@episensor/app-framework",
  "version": "4.1.1",
  "description": "Opinionated TypeScript framework for structured vibecoding - building internal web and desktop apps with batteries included",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "app-framework": "./dist/cli/index.js",
    "framework": "./dist/cli/index.js",
    "build-sidecar": "./dist/cli/build-sidecar.js",
    "dev-server": "./dist/cli/dev-server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./desktop": {
      "types": "./dist/desktop/index.d.ts",
      "import": "./dist/desktop/index.js"
    },
    "./ui": {
      "types": "./ui/dist/index.d.ts",
      "import": "./ui/dist/index.js",
      "require": "./ui/dist/index.js"
    },
    "./ui/utils": {
      "types": "./dist/ui/utils/index.d.ts",
      "import": "./dist/ui/utils/index.js"
    },
    "./ui/styles/globals.css": "./ui/styles/globals.css"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/ --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest tests/unit/ --coverage",
    "test:coverage:integration": "jest tests/integration/ --coverage",
    "test:security": "npm audit --audit-level moderate",
    "security:deps": "npm audit fix --audit-level moderate --dry-run",
    "benchmark": "echo 'Benchmarks not yet implemented'",
    "docs:api": "typedoc --out docs/api src/index.ts",
    "docs:build": "echo 'Documentation site build not yet configured'",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts' '*.md'",
    "format:check": "prettier --check 'src/**/*.ts' '*.md'",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "framework",
    "typescript",
    "nodejs",
    "industrial",
    "iot",
    "device-simulation",
    "logging",
    "configuration",
    "websockets"
  ],
  "author": "EpiSensor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brendan-carroll/epi-app-framework.git"
  },
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "@types/multer": "^2.0.0",
    "archiver": "^7.0.1",
    "boxen": "^8.0.1",
    "chalk": "^5.5.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.9",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "fs-extra": "^11.2.0",
    "lowdb": "^7.0.1",
    "multer": "^2.0.2",
    "openai": "^5.13.1",
    "papaparse": "^5.5.3",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "unzipper": "^0.12.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/boxen": "^2.1.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "src/",
    "ui/dist/",
    "ui/styles/",
    "README.md",
    "LICENSE"
  ]
}
