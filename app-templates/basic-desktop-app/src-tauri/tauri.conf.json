{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyDesktopApp",
  "version": "1.0.0",
  "identifier": "com.episensor.myapp",
  "build": {
    "beforeDevCommand": "npm run dev:all",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "VITE_API_URL=http://localhost:3005 npm run build",
    "frontendDist": "../dist/web"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "My Desktop App",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "center": true,
        "minWidth": 1024,
        "minHeight": 768
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "'self' http://localhost:* ws://localhost:*",
        "img-src": "'self' asset: https://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self'"
      }
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "2025 EpiSensor",
    "shortDescription": "My Desktop App",
    "longDescription": "A desktop application built with EpiSensor framework",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "binaries/server-*": "./server"
    },
    "dmg": {
      "appPosition": {
        "x": 180,
        "y": 170
      },
      "applicationFolderPosition": {
        "x": 480,
        "y": 170
      },
      "windowSize": {
        "width": 660,
        "height": 400
      }
    }
  }
}